{
  "name": "online-scoreboard",
  "version": "0.1.0",
  "engines": {
    "node": "10.x"
  },
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "preserve": "npm run build",
    "serve": "npx serve -s build -p 3000",
    "now-build": "bash ./scripts/version.sh && react-scripts build",
    "test": "react-scripts test --watchAll --coverage",
    "test:ci": "react-scripts test --ci --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "e2e": "TS_NODE_PROJECT=e2e/tsconfig.json cucumber-js --require-module ts-node/register './e2e/features/' --require './e2e/step_definitions/*.ts' --require './e2e/support/*.ts' -f json:e2e/reporting/json/json-report.json --format summary",
    "e2e:local": "SELENIUM_BROWSER=chrome TS_NODE_PROJECT=e2e/tsconfig.json cucumber-js --require-module ts-node/register './e2e/features/' --require './e2e/step_definitions/*.ts' --require './e2e/support/*.ts'",
    "e2e-report": "TS_NODE_PROJECT=e2e/tsconfig.json ts-node e2e/reporting/reporter.ts",
    "lint": "eslint --ext=ts,tsx src/**/* e2e/support e2e/step_definitions e2e/pages",
    "ncu": "ncu"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.2",
    "@material-ui/core": "^4.5.2",
    "@material-ui/icons": "^4.4.3",
    "@reach/router": "^1.2.1",
    "apollo-boost": "^0.4.4",
    "aws-amplify": "^1.1.40",
    "bad-words": "^3.0.3",
    "dotenv": "^8.1.0",
    "graphql": "^14.5.8",
    "react": "^16.11.0",
    "react-avataaars": "^0.2.3",
    "react-dom": "^16.11.0",
    "react-scripts": "^3.2.0",
    "unique-names-generator": "^3.0.0"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@testing-library/react-hooks": "^2.0.3",
    "@types/cucumber": "^4.0.7",
    "@types/dotenv": "^6.1.1",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "24.0.21",
    "@types/node": "^12.12.5",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/selenium-webdriver": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "cucumber": "^5.1.0",
    "cucumber-html-reporter": "^5.0.2",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest-junit": "^9.0.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.11.0",
    "selenium-webdriver": "^4.0.0-alpha.5",
    "ts-node": "^8.4.1",
    "typescript": "3.6.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:ci"
    }
  }
}
