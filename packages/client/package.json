{
  "name": "online-scoreboard-client",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:Online-Scoreboard/online-scoreboard.git"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "react-scripts --max_old_space_size=4096 start",
    "build": "react-scripts --max_old_space_size=4096 build",
    "preserve": "npm run build",
    "serve": "npx serve -s build -p 3000",
    "now-build": "bash ./scripts/version.sh && npm run build",
    "test": "react-scripts test --watchAll --coverage",
    "test:ci": "react-scripts test --ci --coverage --watchAll=false --reporters=default --reporters=jest-junit",
    "eject": "react-scripts eject",
    "lint": "eslint --ext=ts,tsx src/**/*",
    "lint:ci": "eslint --format junit -o reports/junit/js-lint-results.xml --ext=ts,tsx src/**/*",
    "ncu": "ncu"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.2",
    "@material-ui/core": "^4.7.0",
    "@material-ui/icons": "^4.5.1",
    "@material-ui/lab": "^4.0.0-alpha.32",
    "@reach/router": "^1.2.1",
    "apollo-boost": "^0.4.4",
    "aws-amplify": "^1.1.40",
    "bad-words": "^3.0.3",
    "dotenv": "^8.2.0",
    "graphql": "^14.5.8",
    "react": "^16.12.0",
    "react-avataaars": "^0.2.3",
    "react-dom": "^16.12.0",
    "react-scripts": "^3.2.0",
    "unique-names-generator": "^4.1.1"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@testing-library/react-hooks": "^2.0.3",
    "@types/dotenv": "^8.2.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/reach__router": "^1.2.6",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "react-test-renderer": "^16.12.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test:ci"
    }
  }
}
